<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/all_classification_parent_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/all_classification_parent_name_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="13dp"
            android:layout_marginLeft="15dp"
            android:textSize="14sp"
            android:textColor="@color/default_color"
            android:text="一级分类"
            />
        <ImageView
            android:id="@+id/arrow_down_iv"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/sxfw_arrow_down"
            android:layout_gravity="center"
            android:layout_marginRight="15dp"
            />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/all_classification_child_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D8D8D8"
        />
</LinearLayout>