<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/send_red_root"
    android:focusable="true"
    android:focusableInTouchMode="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/white_normal_8radius_shape">
        <TextView
            android:id="@+id/add_server_label_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="添加需求标签"
            android:textColor="@color/default_color"
            android:textSize="16sp"
            android:layout_marginBottom="20dp"
            />
        <EditText
            android:id="@+id/add_server_label_etv"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:hint="选填，每个标签长度小于10个字符，标签与标签之间用逗号隔开 如：QQ号出售,签名提供,云账号"
            android:textColorHint="#666666"
            android:textSize="13sp"
            android:textColor="@color/default_color"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:gravity="top|left"
            android:background="@drawable/add_server_label_shape"
            android:paddingTop="11dp"
            android:paddingBottom="11dp"
            android:paddingLeft="11dp"
            />

        <include layout="@layout/split_horizontal"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >
            <!--<LinearLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent">-->
            <TextView
                android:id="@+id/add_server_label_cancel_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="取消"
                android:gravity="center"
                android:textColor="@color/default_color"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:background="@drawable/pop_cancel_selector"
                />
            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/split"
                />
            <TextView
                android:id="@+id/add_server_label_sure_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="确定"
                android:textColor="#FE4841"
                android:gravity="center"
                android:background="@drawable/pop_sure_selector"
                />
        </LinearLayout>
        <!--</LinearLayout>-->
    </LinearLayout>
</RelativeLayout>