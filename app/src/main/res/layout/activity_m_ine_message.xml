<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ui.activity.main_tab_activity.MIneMessageActivity">
    <include layout="@layout/toolbar_layout"/>
    <com.androidkun.xtablayout.XTabLayout
        android:id="@+id/message_tab"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        app:xTabIndicatorColor="#FFB436"
        app:xTabIndicatorWidth="28dp"
        app:xTabIndicatorHeight="5dp"
        android:layout_marginLeft="57dp"
        android:layout_marginRight="57dp"
        app:xTabSelectedTextColor="@color/default_color"
        app:xTabTextColor="#666666" />
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/message_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
</LinearLayout>