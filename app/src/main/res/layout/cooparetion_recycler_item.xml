<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="67dp"
    android:background="@color/white">

    <ImageView
        android:id="@+id/cooperation_iv"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/wsfws_mrtx"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/cooperation_top_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="服务加盟合作"
        android:textSize="14sp"
        android:textColor="@color/default_color"
        app:layout_constraintStart_toEndOf="@+id/cooperation_iv"
        app:layout_constraintTop_toTopOf="@+id/cooperation_iv" />

    <TextView
        android:id="@+id/cooperation_bottom_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="更多业务量,更大知名度"
        android:textSize="12sp"
        android:textColor="#666666"
        app:layout_constraintBottom_toBottomOf="@+id/cooperation_iv"
        app:layout_constraintStart_toStartOf="@+id/cooperation_top_tv" />

    <Button
        android:id="@+id/cooperation_btn"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:layout_marginEnd="10dp"
        android:text="立即咨询"
        android:background="@drawable/register_btn_selector"
        android:textSize="12sp"
        android:textColor="@color/default_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#F5F5F5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>