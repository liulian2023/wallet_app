<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5"
    tools:context=".ui.activity.main_tab_activity.ClassificationDetailsActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/classification_details_toolbar_back_iv"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/back_black"
            android:layout_gravity="center"
            android:layout_marginLeft="12dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:layout_marginLeft="4dp"
            android:background="@drawable/home_search_linear_shape"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/fenlei_ss_icon"
                android:layout_gravity="center"
                android:layout_marginLeft="12dp"
                />
            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:textColor="@color/default_color"
                android:hint="请输入您想找的需求,比如支付信息"
                android:textSize="12sp"
                android:textColorHint="@color/default_color"
                android:layout_marginLeft="4dp"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>