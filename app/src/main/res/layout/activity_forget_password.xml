<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.activity.user_info_activity.ForgetPasswordActivity">

    <include
        android:id="@+id/include8"
        layout="@layout/toolbar_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView37"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="38dp"
        android:layout_marginTop="51dp"
        android:text="+"
        android:textColor="#FEBD00"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include8" />

    <TextView
        android:id="@+id/area_code_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="51dp"
        android:text="63"
        android:textColor="#FEBD00"
        android:textSize="13sp"
        android:paddingRight="5dp"
        app:layout_constraintStart_toEndOf="@+id/textView37"
        app:layout_constraintTop_toBottomOf="@+id/include8" />

    <ImageView
        android:id="@+id/area_code_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/area_code_tv"
        app:layout_constraintStart_toEndOf="@+id/area_code_tv"
        app:layout_constraintTop_toTopOf="@+id/area_code_tv"
        app:srcCompat="@drawable/arrow_down_black" />

    <EditText
        android:id="@+id/phone_etv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="37dp"
        android:background="@null"
        android:hint="请输入已绑定的手机号"
        android:paddingLeft="10dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:textColor="@color/default_color"
        android:textColorHint="#999999"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView37"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/area_code_iv"
        app:layout_constraintTop_toTopOf="@+id/textView37" />

    <TextView
        android:id="@+id/textView38"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="7dp"
        android:background="#D4D4D4"
        app:layout_constraintEnd_toEndOf="@+id/phone_etv"
        app:layout_constraintStart_toStartOf="@+id/textView37"
        app:layout_constraintTop_toBottomOf="@+id/phone_etv" />

    <EditText
        android:id="@+id/phone_code_etv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@null"
        android:hint="请输入短信验证码"
        android:paddingLeft="10dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:inputType="number"
        android:textColor="@color/default_color"
        android:textColorHint="#999999"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@+id/get_phone_code_btn"
        app:layout_constraintEnd_toStartOf="@+id/get_phone_code_btn"
        app:layout_constraintStart_toStartOf="@+id/textView37"
        app:layout_constraintTop_toTopOf="@+id/get_phone_code_btn" />

    <Button
        android:id="@+id/get_phone_code_btn"
        android:layout_width="74dp"
        android:layout_height="28dp"
        android:layout_marginTop="27dp"
        android:background="@drawable/register_btn_selector"
        android:text="获取验证码"
        android:textColor="@color/default_color"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/textView38"
        app:layout_constraintTop_toBottomOf="@+id/textView38" />

    <TextView
        android:id="@+id/textView40"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="7dp"
        android:background="#D4D4D4"
        app:layout_constraintEnd_toEndOf="@+id/phone_etv"
        app:layout_constraintStart_toStartOf="@+id/textView37"
        app:layout_constraintTop_toBottomOf="@+id/get_phone_code_btn" />

    <EditText
        android:id="@+id/password_etv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="41dp"
        android:layout_marginEnd="37dp"
        android:background="@null"
        android:hint="请重新设置8-20位密码，字母+数字组合"
        android:paddingLeft="10dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:textColor="@color/default_color"
        android:textColorHint="#999999"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/phone_code_etv"
        app:layout_constraintTop_toBottomOf="@+id/textView40" />

    <TextView
        android:id="@+id/textView42"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="7dp"
        android:background="#D4D4D4"
        app:layout_constraintEnd_toEndOf="@+id/phone_etv"
        app:layout_constraintStart_toStartOf="@+id/textView37"
        app:layout_constraintTop_toBottomOf="@+id/password_etv" />


    <EditText
        android:id="@+id/sure_password_etv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="41dp"
        android:layout_marginEnd="37dp"
        android:background="@null"
        android:hint="请确认密码"
        android:paddingLeft="10dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:textColor="@color/default_color"
        android:textColorHint="#999999"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/phone_code_etv"
        app:layout_constraintTop_toBottomOf="@+id/textView42" />

    <TextView
        android:id="@+id/textView43"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="7dp"
        android:background="#D4D4D4"
        app:layout_constraintEnd_toEndOf="@+id/phone_etv"
        app:layout_constraintStart_toStartOf="@+id/textView37"
        app:layout_constraintTop_toBottomOf="@+id/sure_password_etv" />

    <Button
        android:id="@+id/modify_password_btn"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="41dp"
        android:layout_marginEnd="38dp"
        android:background="@drawable/register_btn_selector"
        android:text="立即修改"
        android:textColor="@color/default_color"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView43" />
</androidx.constraintlayout.widget.ConstraintLayout>