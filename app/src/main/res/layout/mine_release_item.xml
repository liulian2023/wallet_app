<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/white_normal_ripple"
    android:layout_marginBottom="14dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:background="@drawable/white_normal_8radius_shape">

        <TextView
            android:id="@+id/mine_release_id_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:text="编号:2222222"
            android:textColor="#999999"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/mine_release_status_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:text="用户委托中"
            android:textColor="#FA6400"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/mine_release_id_tv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/mine_release_id_tv" />

        <TextView
            android:id="@+id/mine_release_content_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/guarantee_order_linear_shape"
            android:paddingLeft="6dp"
            android:paddingTop="6dp"
            android:paddingRight="6dp"
            android:paddingBottom="6dp"
            android:text="XXX最后浏览了您的信息（有设置昵称的显示昵称，没有的显示账号后三位数****aaa）"
            android:textColor="#9B9B9B"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView12" />

        <Button
            android:id="@+id/left_btn"
            android:layout_width="70dp"
            android:layout_height="22dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/order_button_selector"
            android:text="查看详情"
            android:textColor="#FA6400"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/right_btn"
            app:layout_constraintEnd_toStartOf="@+id/center_btn"
            app:layout_constraintTop_toTopOf="@+id/right_btn" />

        <Button
            android:id="@+id/center_btn"
            android:layout_width="70dp"
            android:layout_height="22dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/order_button_selector"
            android:text="修改"
            android:textColor="#FA6400"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/right_btn"
            app:layout_constraintEnd_toStartOf="@+id/right_btn"
            app:layout_constraintTop_toTopOf="@+id/right_btn" />

        <Button
            android:id="@+id/right_btn"
            android:layout_width="70dp"
            android:layout_height="22dp"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="14dp"
            android:background="@drawable/order_button_selector"
            android:text="删除"
            android:textColor="#FA6400"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/mine_release_content_tv"
            app:layout_constraintTop_toBottomOf="@+id/mine_release_content_tv" />

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="@+id/mine_release_id_tv"
            app:layout_constraintTop_toBottomOf="@+id/mine_release_id_tv"
            app:srcCompat="@drawable/wdfb_title_icon" />

        <TextView
            android:id="@+id/mine_release_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:text="这是一条发布标题"
            android:textColor="@color/default_color"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView12"
            app:layout_constraintStart_toEndOf="@+id/imageView12"
            app:layout_constraintTop_toTopOf="@+id/imageView12" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>