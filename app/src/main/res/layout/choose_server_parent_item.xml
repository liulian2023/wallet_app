<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/white_normal_ripple"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/choose_server_parent_wrap_relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/classification_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:textSize="12sp"
            android:textColor="@color/default_color"
            android:text="一级分类名称"
            android:layout_alignParentStart="true"
            />
        <TextView
            android:id="@+id/choose_server_count_tv"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:layout_toRightOf="@+id/classification_title_tv"
            android:layout_centerVertical="true"
            android:background="@drawable/choose_sercer_count_shape"
            android:text="1"
            android:gravity="center"
            android:layout_marginLeft="16dp"
            />
        <ImageView
            android:id="@+id/choose_server_iv"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginRight="12dp"
            android:src="@drawable/sxfw_arrow_right"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/choose_server_child_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <include layout="@layout/split_horizontal"/>
</LinearLayout>