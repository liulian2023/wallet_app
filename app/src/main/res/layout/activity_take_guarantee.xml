<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5"
    tools:context=".ui.activity.home_activity.TakeGuaranteeActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">
            <include layout="@layout/toolbar_layout"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/default_color"
                android:layout_marginTop="14dp"
                android:layout_marginLeft="12dp"
                android:text="交易标题"
                />
            <EditText
                android:id="@+id/guarantee_title_etv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:background="@null"
                android:layout_marginTop="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginLeft="12dp"
                android:hint="填写标题（必填，建议不超过10个字）"
                android:textColorHint="#999999"
                android:textColor="@color/default_color"
                android:textSize="14sp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f5f5f5"
                android:layout_marginTop="14dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="交易内容"
                android:textColor="@color/default_color"
                android:layout_marginTop="14dp"
                android:layout_marginLeft="12dp"
                />
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/guarantee_content_etv"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@null"
                    android:gravity="top|left"
                    android:hint="请输入您的交易内容"
                    android:paddingTop="8dp"
                    android:textColor="@color/default_color"
                    android:textColorHint="#999999"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/content_length_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#999999"
                    android:text="0/100"
                    android:layout_gravity="bottom|right"
                    android:layout_marginRight="14dp"
                    android:layout_marginBottom="10dp"
                    />
            </FrameLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f5f5f5"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="交易价格"
                android:textColor="@color/default_color"
                android:layout_marginTop="14dp"
                android:layout_marginLeft="12dp"
                />
            <EditText
                android:id="@+id/price_etv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:background="@null"
                android:layout_marginTop="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginLeft="12dp"
                android:hint="请输入交易价格(元)"
                android:textColorHint="#999999"
                android:textColor="@color/default_color"
                android:textSize="14sp"
                android:inputType="numberDecimal"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f5f5f5"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="您的交易角色"
                android:textColor="@color/default_color"
                android:layout_marginTop="14dp"
                android:layout_marginLeft="12dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="16dp"
                >
                <FrameLayout
                    android:layout_width="90dp"
                    android:layout_height="44dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="12dp">
                    <TextView
                        android:id="@+id/is_seller_tv"
                        android:layout_width="90dp"
                        android:layout_height="44dp"
                        android:textSize="12sp"
                        android:textColor="#999999"
                        android:background="@drawable/certification_un_check_shape"
                        android:text="我是买家"
                        android:gravity="center"
                        />
                    <ImageView
                        android:id="@+id/is_seller_iv"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:visibility="gone"
                        android:layout_gravity="top|right"
                        app:srcCompat="@drawable/shlx_gx_fwsrz" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="90dp"
                    android:layout_height="44dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="20dp">
                    <TextView
                        android:id="@+id/is_buyer_tv"
                        android:layout_width="90dp"
                        android:layout_height="44dp"
                        android:textSize="12sp"
                        android:textColor="#999999"
                        android:background="@drawable/certification_un_check_shape"
                        android:text="我是卖家"
                        android:gravity="center"
                        />
                    <ImageView
                        android:id="@+id/is_buyer_iv"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_gravity="top|right"
                        android:visibility="gone"
                        app:srcCompat="@drawable/shlx_gx_fwsrz" />
                </FrameLayout>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f5f5f5"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="买家联系方式"
                android:textColor="@color/default_color"
                android:layout_marginTop="14dp"
                android:layout_marginLeft="12dp"
                />
            <EditText
                android:id="@+id/seller_contact_etv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:background="@null"
                android:layout_marginTop="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginLeft="12dp"
                android:hint="请输入Telegram号～"
                android:textColorHint="#999999"
                android:textColor="@color/default_color"
                android:textSize="14sp"
                android:imeOptions="actionNext"
                android:inputType="text"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f5f5f5"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="卖家联系方式"
                android:textColor="@color/default_color"
                android:layout_marginTop="14dp"
                android:layout_marginLeft="12dp"
                />
            <EditText
                android:id="@+id/buyer_contact_etv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:background="@null"
                android:layout_marginTop="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginLeft="12dp"
                android:hint="请输入Telegram号～"
                android:textColorHint="#999999"
                android:inputType="text"
                android:textColor="@color/default_color"
                android:textSize="14sp"
                android:imeOptions="actionDone"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f5f5f5"
                />
            <LinearLayout
                android:id="@+id/commission_linear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:layout_marginBottom="15dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/default_color"
                    android:layout_marginLeft="12dp"
                    android:text="佣金:"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/commission_recycler"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/guarantee_commit_btn"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="26dp"
            android:textSize="18sp"
            android:textColor="@color/default_color"
            android:background="@drawable/register_btn_selector"
            android:text="提交"
            android:layout_marginBottom="30dp"
            />
    </LinearLayout>

</androidx.core.widget.NestedScrollView>